<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#FFEB3B">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hotels in Nairobi"
        android:textAlignment="center"
        android:textSize="20dp"
        android:padding="30dp"
        android:background="@color/colorAccent"
         />
    <Button
        android:id="@+id/btnKempinski"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kempinski"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="#00BCD4"/>
    <Button
        android:id="@+id/btnSafari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="safari park"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="#00BCD4"/>
    <Button
        android:id="@+id/btnPizza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pizza inn"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="#00BCD4"/>
    <Button
        android:id="@+id/btnLagos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lagos Hotel"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="#00BCD4"/>

</LinearLayout>